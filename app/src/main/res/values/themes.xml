<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OutLet" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name = "chipStyle">@color/chip_background_color</item>
        <item name = "android:textColor">@color/chip_text_color</item>
        <item name = "android:padding">16dp</item>
        <item name = "android:width">82dp</item>
        <item name = "android:height">35dp</item>
        <item name = "android:viewportWidth">82</item>
        <item name = "android:viewportHeight">35</item>
    </style>

    <style name = "CustomEditTextPostStyle" parent="Widget.AppCompat.EditText">
        <item name = "android:background">@drawable/ic_post_edit_text_background</item>
        <item name = "android:padding">8dp</item>
        <item name = "android:editable">false</item>
        <item name = "android:textSize">12sp</item>
    </style>
</resources>